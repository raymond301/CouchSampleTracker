<div class="container">
    </br>
    <h3>Upload Run &amp; Sample Info Files</h3>
    <%= form_tag('ggps_config_create', :multipart => true) do %>

        <table class="table">
            <tr>
                <td>Containing Project:</td>
                <td><%= select_tag 'project', options_for_select(@project), :class => 'input', :style => 'color:black' %></td>
            </tr>
            <tr>
                <td>Run Info File</td>
                <td><%= file_field_tag 'run_info', style: 'color:white;width:450px' %></td>
            </tr>
            <tr>
                <td>Sample Info File</td>
                <td><%= file_field_tag 'sample_info', style: 'color:white;width:450px' %></td>
            </tr>
        </table>
        <%= submit_tag "Upload", :class=>'btn btn-info pull-right'%>
    <% end %>

    </br>

</div>
